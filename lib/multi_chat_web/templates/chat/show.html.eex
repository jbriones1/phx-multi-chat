<h2>Room: <%= @room%></h2>
<div id="chat-box">
  <%= for message <- @messages do %>
    <p class="chat-text"><b><%= message.name %>:</b> <%= message.body %></p>
  <% end %>
</div>
<br>
<%= form_for @conn, "#", [id: "chat-form"], fn f -> %>
  <%= text_input f, :username, placeholder: "Username", id: "user-name" %>
  <br>
  <%= text_input f, :message, placeholder: "Message", id: "user-msg" %>
  <br>
  <%= submit "Post" %>
<% end %>